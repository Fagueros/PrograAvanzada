@using System.Web.Optimization

@{
    Layout = null;
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Dreamscape</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #fff8ee;
            margin: 0;
            padding: 0;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #fff8ee;
            padding: 10px;
            color: black;
            position: relative;
            z-index: 1;
        }

            .navbar ul {
                list-style: none;
                display: flex;
                margin: 0;
                padding: 0;
            }

                .navbar ul li {
                    margin-right: 90px;
                }

                    .navbar ul li:last-child {
                        margin-right: 0;
                    }

                    .navbar ul li a {
                        color: black;
                        text-decoration: none;
                    }

            .navbar .logo {
                font-size: 24px;
                font-weight: bold;
            }

        .container {
            display: flex;
            justify-content: space-between;
            padding: 20px;
            align-items: center;
            margin-top: 100px;
        }

        .left-content {
            max-width: 50%;
            text-align: center;
        }

            .left-content h1 {
                font-size: 36px;
                margin-bottom: 10px;
            }

            .left-content p {
                font-size: 18px;
                margin-bottom: 20px;
            }

            .left-content .explore-buttons {
                display: flex;
                flex-wrap: wrap;
                gap: 10px;
                justify-content: center;
            }

                .left-content .explore-buttons button {
                    padding: 10px 10px;
                    font-size: 10px;
                    background-color: #3aa7ab;
                    color: black;
                    border: none;
                    cursor: pointer;
                    border-radius: 10px;
                }

        .right-content {
            max-width: 50%;
            text-align: center;
        }

            .right-content img {
                max-width: 100%;
                height: auto;
            }

        .featured-section {
            padding: 20px;
            background-color: #f4f4f4;
            text-align: center;
        }

            .featured-section h2 {
                margin-bottom: 20px;
            }

        .footer {
            background-color: #333;
            color: white;
            padding: 20px;
            text-align: center;
        }

            .footer a {
                color: white;
                text-decoration: none;
                margin: 0 10px;
            }

            .footer .social-icons {
                margin-top: 10px;
            }

                .footer .social-icons img {
                    width: 24px;
                    height: 24px;
                    margin: 0 5px;
                }
    </style>
</head>
<body>

    <nav class="navbar">
        <ul class="left-nav">
            <li><a href="#">Help</a></li>
            <li><a href="#">Catalogo</a></li>
        </ul>
        <div class="logo">Dreamscape</div>
        <ul class="right-nav">
            <li><a href="@Url.Action("About", "Home")">About</a></li>
            <li><a href="#">Login</a></li>
        </ul>
    </nav>

    <div class="container">
        <div class="left-content">
            <h1>Welcome to Dreamscape</h1>
            <p>Discover a world of stores</p>
            <div class="explore-buttons">
                <button onclick="scrollToFeatured()">Explore Books</button>
                <button onclick="scrollToFeatured()">Explore Curiosities</button>
                <button onclick="scrollToFeatured()">More</button>
            </div>

        </div>
        <div class="right-content">
            <img src="https://img.freepik.com/vector-gratis/concepto-mercado-pulgas-dibujado-mano_23-2148814804.jpg" alt="Dreamscape Image">
        </div>
    </div>


    <script>
        function scrollToFeatured() {
            document.getElementById('featured').scrollIntoView({ behavior: 'smooth' });
        }
    </script>
</body>
</html>

